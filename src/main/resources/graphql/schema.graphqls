type Query {
    "all currently know pets"
    pets:[Pet]
    petsByKind(kind: PetKind!): [Pet]
    pet(name: String!): Pet
}

"""
A pet can be a Dog or Cat
A Pet has a human owner
"""

enum PetKind{
    CAT
    DOG
    BIRD
}

scalar Date @specifiedBy(url:
"https://scalars.graphql.org/andimarek/local-date")


type Pet {
    id: ID
    name: String
    color: String
    owner: Person
    dateOfBirth: Date
}
type Person {
    id: ID
    firstName: String
    lastName: String
}